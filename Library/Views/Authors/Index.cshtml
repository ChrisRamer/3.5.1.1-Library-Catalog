@{
	Layout = "_Layout";
}

@using Library.Models
@model List<Library.Models.Author>

<h2 id="title">Authors</h1>

 <hr />

	@if (Model.Count == 0)
	{
	  <p>No authors have been added yet.</p>
	}
	else
	{
		@foreach (Author author in Model)
		{
		   <li>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId })</li>
		}
	}

 <hr />

 <p>
		@Html.ActionLink("Add a new author", "Create")
 |
		@Html.ActionLink("Go to homepage", "Index", "Home")
 </p>