@{
	Layout = "_Layout";
}

@using Library.Models
@model List<Library.Models.Book>

<h2 id="title">Books</h1>

 <hr />

	@if (Model.Count == 0)
	{
	 <p>No books have been added yet.</p>
	}
	else
	{
		@foreach (Book book in Model)
		{
		 <li>@Html.ActionLink($"{book.Name}", "Details", new { id = book.BookId })</li>
		}
	}

 <hr />

 <p>
		@Html.ActionLink("Add a new book", "Create")
  |
		@Html.ActionLink("Go to homepage", "Index", "Home")
 </p>